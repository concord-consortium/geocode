{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es2018",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "types": ["jest"],
    "jsx": "react-jsx",
    "lib": ["dom", "dom.iterable", "es2018"]
  },
  "include": [
    "./src/**/*"
  ]
}
